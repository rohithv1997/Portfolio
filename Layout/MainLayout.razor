@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true"/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                       OnClick="@(e => DrawerToggle())"/>
        <MudText Typo="Typo.h5" Class="ml-3">Rohith's Portfolio</MudText>
        <MudSpacer/>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="2" ClipMode="DrawerClipMode.Always">
        <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
        <MudNavLink Href="experience" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.WorkHistory">Experience
        </MudNavLink>
        <MudNavLink Href="projects" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Laptop">Projects</MudNavLink>
        <MudNavLink Href="skills" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.ScreenSearchDesktop">Skills
        </MudNavLink>
        <MudNavLink Href="certifications" Match="NavLinkMatch.All" Icon="@Icons.Custom.FileFormats.FileDocument">
            Certifications
        </MudNavLink>
        <MudNavLink Href="education" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.School">Education
        </MudNavLink>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>


<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

}
